rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return (
        request.auth != null &&
        (
          request.auth.token.admin == true ||
          (
            request.auth.token.email != null &&
            (
              request.auth.token.email == 'correctnowapp@gmail.com' ||
              request.auth.token.email.matches('.*@correctnow\\.app$') ||
              request.auth.token.email.matches('.*admin.*')
            )
          )
        )
      );
    }

    // Admin has full access to all collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /users/{userId}/docs/{docId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create, update: if isSignedIn() && request.auth.uid == userId;
      allow delete: if isSignedIn() && request.auth.uid == userId && resource.data.archivedAt is string;
    }

    match /blogs/{blogId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (
        resource != null &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']) &&
        request.resource.data.views is int &&
        request.resource.data.views >= (resource.data.views is int ? resource.data.views : 0)
      );

      match /comments/{commentId} {
        allow read: if true;
        allow create: if
          request.resource.data.keys().hasOnly(['name', 'message', 'createdAtIso']) &&
          request.resource.data.name is string &&
          request.resource.data.message is string &&
          request.resource.data.createdAtIso is string &&
          request.resource.data.name.size() <= 60 &&
          request.resource.data.message.size() > 0 &&
          request.resource.data.message.size() <= 2000;
        allow update, delete: if false;
      }
    }

    match /suggestions/{suggestionId} {
      allow create: if isSignedIn();
      allow read, update: if isSignedIn() && request.auth.uid == resource.data.userId;
    }
  } 
}
 